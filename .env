# Docker Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_DATABASE=formbuilder
DB_USER=g
DB_PASSWORD=

# Application Configuration
NODE_ENV=development
PORT=5001
JWT_SECRET=your-super-secret-jwt-key-change-in-production-123456789

# Database URL (for Prisma - Docker version)
DATABASE_URL=postgresql://formbuilder:your-secure-password-here@postgres:5432/formbuilder

# Redis Configuration (Docker version)
REDIS_URL=redis://localhost:6380

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5001
NEXT_PUBLIC_BRAND_PRESET=generic

# Optional: Email Configuration (for production)
# SMTP_HOST=smtp.gmail.com
