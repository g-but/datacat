{
  "version": 2,
  "name": "datacat",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://datacat-backend.railway.app",
    "NEXT_PUBLIC_BRAND_PRESET": "datacat",
    "NEXT_TELEMETRY_DISABLED": "1",
    "SKIP_CONTENTLAYER": "false"
  },
  "build": {
    "env": {
      "SKIP_CONTENTLAYER": "false"
    }
  },
  "functions": {
    "frontend/src/app/api/*": {
      "runtime": "nodejs18.x"
    }
  }
}