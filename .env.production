# Production Environment Configuration
# Generated for secure Docker deployment

# Application
NODE_ENV=production
PORT=5001

# Database Configuration
DATABASE_URL=postgresql://formbuilder:${DB_PASSWORD}@postgres:5432/formbuilder
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=formbuilder
DB_USER=formbuilder
DB_PASSWORD=${DB_PASSWORD}

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security
JWT_SECRET=${JWT_SECRET}

# AI Integration
OPENAI_API_KEY=${OPENAI_API_KEY}

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5001
NEXT_PUBLIC_BRAND_PRESET=generic
NEXT_TELEMETRY_DISABLED=1

# Content Layer (Optional)
SKIP_CONTENTLAYER=false